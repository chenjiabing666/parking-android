<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_42dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="@dimen/d_21dp"
        android:layout_height="@dimen/d_21dp"
        android:layout_marginLeft="@dimen/d_15dp"
        android:background="@drawable/icon_message" />

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_30dp"
        android:layout_marginLeft="@dimen/d_15dp"
        android:layout_marginRight="@dimen/d_15dp"
        android:background="@drawable/shape_f3f3f3_corner15"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="@dimen/d_10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_10dp"
        android:text="搜索"
        android:textColor="@color/c_7A7A7A"
        android:textSize="@dimen/s_12sp" />
</LinearLayout>
