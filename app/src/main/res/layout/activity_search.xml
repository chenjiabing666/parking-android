<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/d_15dp">

        <com.example.chen.simpleparkingapp.view.widget.ClearWriteEditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_f3f3f3_corner18"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/d_5dp"
            android:gravity="center_vertical"
            android:hint="输入资源内容"
            android:paddingLeft="@dimen/d_10dp"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/c_3D3D3D"
            android:textColorHint="@color/c_7A7A7A"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="@dimen/dp_40"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/d_8dp"
            android:background="@drawable/shape_theme_solid_2_corners"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <include layout="@layout/common_recycler_view" />
</LinearLayout>