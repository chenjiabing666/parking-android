<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/common_title" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1dp"
        android:background="@color/common_bg"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:id="@+id/tvCarNumber"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_15dp"
        android:text="车牌号：苏C66666"
        android:textColor="@color/c_3D3D3D"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tvEdit"
        app:layout_constraintTop_toTopOf="@+id/tvCarNumber"
        app:layout_constraintBottom_toBottomOf="@+id/tvCarNumber"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/d_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/theme_color"/>

</android.support.constraint.ConstraintLayout>