<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/d_20dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_140dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:clipChildren="false" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d_10dp"
        android:paddingRight="@dimen/d_15dp"
        android:paddingTop="@dimen/d_10dp">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_6dp"
        android:background="@color/white"
        android:padding="@dimen/d_15dp"
        android:paddingBottom="@dimen/d_8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐停车场"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/s_18sp" />

        <TextView
            android:id="@+id/tvMmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/d_5dp"
            android:text="更多"
            android:textColor="@color/c_909090"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</LinearLayout>