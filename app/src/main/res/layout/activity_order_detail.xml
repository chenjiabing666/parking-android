<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ImageView
        android:id="@+id/ivIcon"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/load_img_err" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15dp"
        android:layout_marginTop="@dimen/d_15dp"
        android:layout_marginRight="@dimen/d_15dp">

        <TextView
            android:id="@+id/tvParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_3dp"
            android:text="星汇大厦停车场"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="总计：0元"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_15dp"
        android:layout_marginTop="@dimen/d_5dp"
        android:layout_marginRight="@dimen/d_15dp"
        android:layout_marginBottom="@dimen/d_3dp"
        android:singleLine="true"
        android:text="订单编号：000000000000000012"
        android:textColor="@color/c_3D3D3D"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15dp"
        android:layout_marginTop="@dimen/d_5dp"
        android:layout_marginRight="@dimen/d_15dp"
        android:text="开始时间：2012/11/12 20:99:00"
        android:textColor="@color/c_3D3D3D"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15dp"
        android:layout_marginTop="@dimen/d_5dp"
        android:layout_marginRight="@dimen/d_15dp"
        android:text="结束时间：2012/11/12 20:99:00"
        android:textColor="@color/c_3D3D3D"
        android:textSize="@dimen/sp_14" />


    <Button
        android:id="@+id/btnSelectCoupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_30dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:background="@drawable/shape_00c188_corner_25"
        android:text="优惠券"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_30dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:background="@drawable/shape_00c188_corner_25"
        android:text="付款"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <!--<Button-->
        <!--android:id="@+id/btn_more"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/d_48dp"-->
        <!--android:layout_marginLeft="@dimen/d_45dp"-->
        <!--android:layout_marginTop="@dimen/d_30dp"-->
        <!--android:layout_marginRight="@dimen/d_45dp"-->
        <!--android:background="@drawable/shape_00c188_corner_25"-->
        <!--android:text="再次预约"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="@dimen/sp_16" />-->

    <Button
        android:id="@+id/btnCancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_30dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:background="@drawable/shape_00c188_corner_25"
        android:text="取消订单"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/sp_16" />


</LinearLayout>