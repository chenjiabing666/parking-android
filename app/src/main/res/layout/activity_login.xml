<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_login"
        layout="@layout/title_login" />

    <ImageView
        android:layout_width="@dimen/d_69dp"
        android:layout_height="@dimen/d_69dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d_43dp"
        android:src="@mipmap/ic_launcher" />

    <com.example.chen.simpleparkingapp.view.widget.ClearWriteEditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_18dp"
        android:background="@color/white"
        android:digits="@string/txt"
        android:hint="@string/phone"
        android:paddingLeft="@dimen/d_9dp"
        android:paddingRight="@dimen/d_9dp"
        android:singleLine="true"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/c_C6C6C6"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:background="@color/list_divider" />

    <com.example.chen.simpleparkingapp.view.widget.ClearWriteEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_14dp"
        android:background="@color/white"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/d_9dp"
        android:paddingRight="@dimen/d_9dp"
        android:singleLine="true"
        android:textColorHint="@color/c_C6C6C6"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:background="@color/list_divider" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48dp"
        android:layout_marginLeft="@dimen/d_45dp"
        android:layout_marginRight="@dimen/d_45dp"
        android:layout_marginTop="@dimen/d_30dp"
        android:background="@drawable/shape_00c188_corner_25"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_35dp"
        android:layout_marginRight="@dimen/d_35dp">

        <TextView
            android:id="@+id/go_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="立即注册"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/go_find_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:text="忘记密码？"
            android:textColor="@color/c_909090"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>
