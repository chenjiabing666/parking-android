<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <com.example.chen.simpleparkingapp.view.widget.RoundCornersImageView
        android:id="@+id/ivIcon"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/load_img_err"
        app:corner="5dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d_5dp">

        <TextView
            android:id="@+id/tvParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_3dp"
            android:text="星汇大厦停车场"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/d_3dp"
            android:text="开通时间：2019-4-4"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="到期时间：2019-5-5"
            android:textColor="@color/c_3D3D3D"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/code"
            android:layout_alignParentRight="true"
            android:padding="@dimen/d_5dp"
            android:id="@+id/tvDo"/>

    </RelativeLayout>

</LinearLayout>